{
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
  "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
  "collectCoverageFrom": ["./src/**/*.ts"],
  "coveragePathIgnorePatterns": ["<rootDir>/src/types", "<rootDir>/src/index.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/**/*.ts": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "transform": {
    "^.+\\.ts$": "babel-jest"
  },
  "setupFiles": [
    "./tests/unit/setupJest.ts"
  ]
}
